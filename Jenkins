pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        IMAGE_NAME = "iammahendravarma20/nextjs-monolith"
        VERSION_TAG = "v${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/iam-mahendravarma/Devops-Project-02-Dockerized-Monolithic.git'
            }
        }

        stage('Build with Docker Compose') {
            steps {
                sh '''
                    echo "Building Docker image using docker-compose..."
                    sudo docker-compose down || true
                    sudo docker-compose up -d --build
                '''
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh '''
                    echo "Logging into Docker Hub..."
                    echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                '''
            }
        }

        stage('Tag and Push Docker Images') {
            steps {
                script {
                    echo "Tagging and pushing images..."
                    sh """
                        # Tag built image with build number and latest
                        sudo docker tag ${IMAGE_NAME}:latest ${IMAGE_NAME}:${VERSION_TAG}

                        # Push both tags to Docker Hub
                        sudo docker push ${IMAGE_NAME}:${VERSION_TAG}
                    """
                }
            }
        }

        stage('Clean Up') {
            steps {
                sh '''
                    echo "Cleaning up..."
                    sudo docker-compose down
                    sudo docker system prune -f
                '''
            }
        }
    }

    post {
        success {
            echo "Successfully pushed ${IMAGE_NAME}:${VERSION_TAG}"
        }
        failure {
            echo "Build failed. Check logs in Jenkins console."
        }
    }
}
