pipeline {
    agent any

    environment {
        APP_NAME = "nextjs-app"
        APP_DIR  = "/var/www/html"
        NODE_ENV = "production"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/iam-mahendravarma/Devops-Project-01-Monolithic.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Check Node.js and npm versions
                sh 'docker-compose up -d --build'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

    }

    post {
        success {
            echo '✅ Deployment successful!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
